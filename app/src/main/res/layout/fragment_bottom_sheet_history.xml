<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/btn_background1"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/semibold"
            android:text="Riwayat Donor"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/btn_background4"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="Example Nama Barang"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:textSize="20dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/tvDeskripsiStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:layout_marginTop="-10dp"
        android:text="Silahkan tukarkan kode kupon dengan mendatangi kegitan donor darah, dan menyerahkan kode kupon kepada petugas kami"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnUpdatePoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/semibold"
        android:text="Masukan Poin"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp" />




</LinearLayout>