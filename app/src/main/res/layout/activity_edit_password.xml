<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/btn_background1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:text="Ubah Kata Sandi"
                android:textColor="@color/white"
                android:textSize="22dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubah Kata Sandi"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/red"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Silahkan ubah kata sandi agar tetap menjaga keamanan informasi pribadi anda."
                    android:textColor="@color/black"
                    android:fontFamily="@font/semibold"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Kata Sandi Lama"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="textVisiblePassword"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Kata Sandi Baru"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="textVisiblePassword"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Konfirmasi Kata Sandi"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="textVisiblePassword"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="7dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/red"
                    android:fontFamily="@font/semibold"
                    android:text="Simpan"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>