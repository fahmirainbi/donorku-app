<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@drawable/btn_background1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:text="Ubah Profil"
                android:textColor="@color/white"
                android:textSize="22dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Nomor Identitas"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/tipe_identitas"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background4"
                        android:dropDownWidth="match_parent"
                        android:elevation="2dp"
                        android:entries="@array/jenis_identitas"
                        android:fontFamily="@font/medium"
                        android:inputType="text"
                        android:padding="10dp"
                        android:shadowColor="@color/black"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/grey_font"
                        android:textSize="18dp" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/nomor_identitas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_background4"
                        android:elevation="2dp"
                        android:fontFamily="@font/medium"
                        android:inputType="text"
                        android:padding="10dp"
                        android:shadowColor="@color/black"
                        android:textColor="@color/grey_font"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Nama"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Jenis Kelamin"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:dropDownWidth="match_parent"
                    android:elevation="2dp"
                    android:entries="@array/jenis_kelamin"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Tempat Lahir"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tempat_lahir"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Tanggal Lahir"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/semibold"
                        android:text="DD / MM / YYYY"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/pickDateBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_calender" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Nomor Telepon"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/nomor_telepon"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Alamat"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/semibold"
                            android:text="RT/RW"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/RT_RW"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:background="@drawable/btn_background4"
                            android:elevation="2dp"
                            android:fontFamily="@font/medium"
                            android:inputType="text"
                            android:padding="10dp"
                            android:shadowColor="@color/black"
                            android:textColor="@color/grey_font"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/semibold"
                            android:text="Kode Pos"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/kode_pos"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:background="@drawable/btn_background4"
                            android:elevation="2dp"
                            android:fontFamily="@font/medium"
                            android:inputType="text"
                            android:padding="10dp"
                            android:shadowColor="@color/black"
                            android:textColor="@color/grey_font"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Desa/Kelurahan"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/kelurahan"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Kecamatan"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/kecamatan"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Kabupaten"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/kabupaten"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Provinsi"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/provinsi"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Pekerjaan"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/pekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Alamat Kantor"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/alamat_kantor"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Telp Kantor"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/telp_kantor"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:elevation="2dp"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/semibold"
                    android:text="Golongan Darah"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/golongan_darah"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_background4"
                    android:dropDownWidth="match_parent"
                    android:elevation="2dp"
                    android:entries="@array/blood"
                    android:fontFamily="@font/medium"
                    android:inputType="text"
                    android:padding="10dp"
                    android:shadowColor="@color/black"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/grey_font"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/red"
                    android:fontFamily="@font/semibold"
                    android:paddingVertical="7dp"
                    android:text="Simpan"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>