<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitydonorrequest.DonorRequestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@drawable/btn_background1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold"
            android:text="Pengajuan Kegiatan Donor"
            android:textColor="@color/white"
            android:textSize="22dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="-20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/semibold"
                android:text="Nama"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_name"
                android:padding="10dp"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_background4"
                android:elevation="2dp"
                android:fontFamily="@font/medium"
                android:inputType="text"
                android:shadowColor="@color/black"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:textColor="@color/grey_font"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/semibold"
                android:text="Nama Organisasi"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_organisation"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_background4"
                android:elevation="2dp"
                android:fontFamily="@font/medium"
                android:inputType="text"
                android:shadowColor="@color/black"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="PMI Ranting Kecamatan Sukajadi"
                android:padding="10dp"
                android:textColor="@color/grey_font"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/semibold"
                android:text="Tanggal Kegiatan"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_background4"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:text="DD / MM / YYYY"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/pickDateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:src="@drawable/ic_calender" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/semibold"
                android:text="No. Telepon"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_number"
                android:layout_width="350dp"
                android:layout_height="47dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_background4"
                android:elevation="2dp"
                android:fontFamily="@font/medium"
                android:inputType="text"
                android:shadowColor="@color/black"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:textColor="@color/grey_font"
                android:padding="10dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/semibold"
                android:text="Catatan"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_note"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_background4"
                android:elevation="2dp"
                android:fontFamily="@font/medium"
                android:inputType="text"
                android:shadowColor="@color/black"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:textColor="@color/grey_font"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_registration_blood"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/semibold"
                android:text="Daftar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>