<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/semibold"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="42dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_email_login"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_background4"
        android:elevation="2dp"
        android:fontFamily="@font/medium"
        android:inputType="text"
        android:shadowColor="@color/black"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:padding="10dp"
        android:text="Email/Nomor Telepon"
        android:textColor="@color/grey_font"
        android:textSize="18dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_password_login"
        android:layout_width="350dp"
        android:layout_height="47dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_background4"
        android:elevation="2dp"
        android:fontFamily="@font/medium"
        android:inputType="text"
        android:shadowColor="@color/black"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:text="Password"
        android:padding="10dp"
        android:textColor="@color/grey_font"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/semibold"
        android:text="Masuk"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:background="@color/black"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/semibold"
            android:text="Atau masuk dengan"
            android:textColor="@color/blue"
            android:textSize="14dp" />

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@color/black"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_google"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/logo_google"
        android:fontFamily="@font/semibold"
        android:onClick="buttonGoogle"
        android:text="Google"
        android:textColor="@color/black"
        android:textSize="18dp"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/semibold"
                android:layout_marginLeft="-50dp"
                android:text="Belum mempunyai akun Donorku?"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/iv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-115dp"
                android:layout_gravity="center"
                android:fontFamily="@font/semibold"
                android:text="Daftar sekarang"
                android:textColor="@color/blue"
                android:textSize="12dp" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>

</LinearLayout>